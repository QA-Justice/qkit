{
  "manifest_version": 3,
  "name": "QKit",
  "version": "1.0.0",
  "description": "A comprehensive QA toolkit with text conversion, time display, character counting, date calculator, and memo features",
  "permissions": [
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "QKit - QA Toolkit"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
